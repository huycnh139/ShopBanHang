        $.ajax({
            url: "/Manage/Product/Get_Color_id/?id_color=" + idsp,
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                $('#sanpham').val(result.tensp);
                $('#size').val(result.size);
                $('#color').val(result.color);
                $('#soluong_color').val(result.soluong);

                $('#id_color').val(result.id_color);
                $('#id_sanpham').val(result.id_sanpham);
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
