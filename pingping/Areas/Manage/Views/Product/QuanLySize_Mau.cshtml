<script type="text/javascript">
    $("#reSearch").keyup(function () {
        var stuKhoa = $("#reSearch").val();
        if (stuKhoa != "" || stuKhoa!=null) {
            $.ajax({
                url: "/Manage/Product/reSearch_Product/?stuKhoa=" + stuKhoa,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = ""
                    html+= "<div class='table-responsive' id='Search'>"
                    html += "<table class='table align-items-center table-flush'>";
                    html += "<thead class='thead-light'>";
                    html += "<tr>";
                    html += "<th scope='col' class='sort' data-sort='name'>Tên Sản Phẩm</th>";
                    html += "<th scope='col' class='sort' data-sort='name'>Số lượng sản phẩm</th>";
                    html += "<th scope='col' class='sort' data-sort='name'>Size</th>";
                    html += "<th scope='col' class='sort' data-sort='name'>Số lượng size</th>";
                    html += "<th scope='col' class='sort' data-sort='name'>Màu</th>";
                    html += "<th scope='col' class='sort' data-sort='name'>Số lượng màu</th>";
                    html += "<th scope='col' class='sort' data-sort='name'></th>";
                    html += "<th scope='col' class='sort' data-sort='name'></th>";
                    html += "</tr>";
                    html += "</thead>";
                    result.forEach(function (value, key) {
                        html += "<tr>"
                        html += "<td class='budget'>" + value.tensp + "</td>"
                        html += "<td class='budget'>" + value.soluong_sp + "</td>"
                        html += "<td class='budget'>" + value.size + "</td>"
                        html += "<td class='budget'>" + value.soluong_size + "</td>"
                        html += "<td class='budget'>" + value.color + "</td>"
                        html += "<td class='budget'>" + value.soluong + "</td>"
                        html += "<td class='budget'> <a class='btn btn-info' data-target='#editColor' data-toggle ='modal' href ='#' onclick = 'EditColor(" + value.id_color + ")'>Sửa</a></td>"
                        html += "<td class='budget'> <a class='btn btn-danger wanning' href ='#' onclick='warning(" + value.id_color+");return false;'>Xoá</a></td>"
                        html += "</tr>"
                    })
                    html += "</table>";
                    html += "</div>";
                    if (stuKhoa == "") {
                        $('.reSearch').empty();
                        $(".table-responsive").show();
                    }
                    else {
                        $(".table-responsive").hide();
                        $('.reSearch').html(html);
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
        
    })
    $("#btnCapNhat").click(function () {
        //Kiem tra so luong khong phai la so hoac nho hon 0
        var SoLuong = $(".soluong").val();
        if (isNaN(SoLuong) == true || SoLuong <= 0) {
            $("#TB_SoLuong").text("Số lượng không hợp lệ!")
            return false;
        }
        else {
            $("#TB_SoLuong").text("")
            return true;
        }
    });
    function warning(id) {
        var check = false;
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = "./DeleteSize_Color/?id="+id;
            }
        })
    }
    function EditColor(idsp) {
