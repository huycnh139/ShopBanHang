                            alternatingRowStyle: "gridAltRow",
                            columns: grid.Columns(
                            //grid.Column("id_sanpham", header: "Mã Sản Phẩm"),
                            grid.Column("tensp", header: "Tên Sản Phẩm"),
                            grid.Column("id_loaisp", header: "Loại Sản Phẩm", format: p => p.id_loaisp != null ? p.LoaiSanPham.tenloai : ""),
                            grid.Column("tenngan", header: "Thông Tin"),
                            grid.Column("soluong", header: "Số lượng"),
                            grid.Column("dongia", header: "Đơn Giá", format: p => p.dongia != null ? p.dongia.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN")) : ""),
                            grid.Column("giasale", header: "Giá Sale", format: p => p.giasale != null ? p.giasale.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("vi-VN")) : ""),
                            grid.Column("trangthai", header: "Trạng Thái"),
                            grid.Column("hienthi", header: "Hiển Thị"),
                            grid.Column("thongtin", header: "Thông Tin"),
                            grid.Column("XepLoai", header: "Xếp Loại"),
                            grid.Column("tinhtrang", header: "Tình Trạng"),
                            grid.Column("hinhanh1", header: "Hình Ảnh 1", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh1 + "\">")),
                            grid.Column("hinhanh2", header: "Hình Ảnh 2", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../../Source/img-public/" + p.hinhanh2 + "\">")),
