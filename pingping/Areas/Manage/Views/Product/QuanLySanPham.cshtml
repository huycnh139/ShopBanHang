                            grid.Column(format: p => Html.ActionLink("Sửa", "#", new { id = p.id_sanpham }, new { @class = "btn btn-info", onclick = "EditSanPham(" + p.id_sanpham + ")", data_toggle = "modal", data_target = "#EditSanPham" })),
